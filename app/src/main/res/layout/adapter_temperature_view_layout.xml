<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:orientation="horizontal"
    android:weightSum="100"
    android:background="@mipmap/shadow_temperature">

    <TextView
        android:id="@+id/tempLayoutName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="33.3"
        android:gravity="center_vertical|center_horizontal"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:text=""
        android:textColor="@color/colorGridIcon"
        android:textSize="20sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorBorder"
       />

    <TextView
        android:id="@+id/tempLayoutDegrees"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="33.3"
        android:drawableLeft="@drawable/ic_icon_termometr"
        android:drawablePadding="-5dp"
        android:drawableTint="@color/colorIconTemperature"
        android:gravity="center_vertical|center_horizontal"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:textColor="@color/colorGridIcon"
        android:textSize="20sp"

        />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorBorder"
       />

    <TextView
        android:id="@+id/tempLayoutHumidity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="33.3"
        android:drawableLeft="@drawable/ic_icon_kropla"
        android:drawablePadding="-20sp"
        android:drawableTint="@color/colorIconWater"
        android:gravity="center_vertical|center_horizontal"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:textColor="@color/colorGridIcon"
        android:textSize="20sp" />
</LinearLayout>