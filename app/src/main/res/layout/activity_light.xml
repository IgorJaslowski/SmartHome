<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LightActivity"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/isLightOnTextView"
        android:layout_width="110dp"
        android:layout_height="0dp"
        android:layout_marginBottom="42dp"
        android:layout_marginTop="120dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/onLightButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation_bottom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/offLightButton"
        app:menu="@menu/navigation"></android.support.design.widget.BottomNavigationView>

    <Button
        android:id="@+id/onLightButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="29dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="1dp"
        android:text="On"
        app:layout_constraintBottom_toTopOf="@+id/offLightButton"
        app:layout_constraintEnd_toEndOf="@+id/isLightOnTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/isLightOnTextView" />

    <Button
        android:id="@+id/offLightButton"
        android:layout_height="wrap_content"
        android:layout_marginBottom="108dp"
        android:layout_marginStart="7dp"
        android:text="Off"
        app:layout_constraintBottom_toTopOf="@+id/navigation_bottom"
        app:layout_constraintStart_toStartOf="@+id/onLightButton"
        app:layout_constraintTop_toBottomOf="@+id/onLightButton"
        android:layout_width="wrap_content" />
</android.support.constraint.ConstraintLayout>