<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_gradient_green_blue"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"


    tools:context=".activity.AlarmActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorHeader"
        android:gravity="left|center_vertical"
        android:paddingLeft="12dp"
        android:text="Alarm"
        android:textColor="@color/colorFontWhite"
        android:textSize="20sp" />

    <GridLayout
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginTop="120dp"
        android:background="@mipmap/shadow">


        <LinearLayout
            android:layout_width="294dp"
            android:layout_height="158dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="50dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="200dp"
                android:layout_height="87dp"
                android:layout_gravity="center"
                android:clickable="false"
                android:drawableLeft="@mipmap/alert_72px"
                android:focusable="false"
                android:gravity="center"
                android:text="Alarm jest \n On/Off"
                android:textColor="@color/colorBlack"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/getAllSensors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="false"

                android:drawablePadding="30dp"
                android:focusable="false"
                android:gravity="center"
                android:paddingBottom="12dp"
                android:textColor="@color/colorBlack"
                android:textSize="25sp" />

        </LinearLayout>


    </GridLayout>





</LinearLayout>