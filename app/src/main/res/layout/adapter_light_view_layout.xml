<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:orientation="horizontal"
    android:weightSum="100"
    android:background="@mipmap/shadow_light_250x80">

    <TextView
        android:id="@+id/lightRoom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40px"
        android:layout_weight="50"
        android:gravity="center_vertical|center_horizontal|start"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:text=""
        android:textColor="@color/colorGridIcon"
        android:textSize="20sp" />


    <Switch
        android:id="@+id/lightSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="40px"
        android:layout_weight="50"
        android:gravity="center_vertical|center_horizontal|end"
        android:paddingBottom="12dp"
        android:paddingRight="30px"
        android:paddingTop="12dp"
        android:textColor="@color/colorGridIcon"
        android:textOff="@string/lightOff"


        android:textOn="@string/lightOn"
        android:textSize="20sp" />



</LinearLayout>