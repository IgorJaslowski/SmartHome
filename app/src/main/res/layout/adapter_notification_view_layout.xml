<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:orientation="horizontal"
    android:background="@mipmap/shadow_list_view">

    <View
        android:id="@+id/view"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:background="#f00" />

    <ImageView
        android:layout_width="51dp"
        android:layout_height="47dp"
        android:contentDescription="Icon Description"
        android:paddingLeft="12dp"
        android:src="@mipmap/ic_warning" />

    <TextView
        android:id="@+id/notifyDescription"
        android:layout_width="198dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center_horizontal"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:text=""
        android:textColor="@color/colorGridIcon"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/notifyDate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foregroundGravity="right"
        android:gravity="right"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:textSize="10sp" />


</LinearLayout>