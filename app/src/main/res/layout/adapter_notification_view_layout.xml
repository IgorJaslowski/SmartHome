<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:background="@mipmap/shadow"
    android:orientation="horizontal">

    <View
        android:id="@+id/view"
        android:layout_width="8dp"
        android:layout_height="match_parent"
        android:background="#f00" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="47dp"
        android:contentDescription="Icon Description"
        android:paddingLeft="12dp"
        android:paddingTop="10dp"
        android:src="@drawable/ic_exclamation_circle_solid" />

    <TextView
        android:id="@+id/notifyDescription"
        android:layout_width="175dp"
        android:layout_height="match_parent"
        android:fontFamily="@font/roboto_light"
        android:gravity="center_vertical|center_horizontal"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:text=""
        android:textColor="@color/colorGridIcon"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/notifyDate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/roboto_light"
        android:foregroundGravity="right"
        android:gravity="right"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:textColor="@color/color_notify_date"
        android:textSize="10sp" />


</LinearLayout>